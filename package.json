{
    "name": "pixi-typescript-boilerplate",
    "version": "1.0.0",
    "description": "pixi.js typescript boilerplate webpack",
    "browserslist": "> 0.25%, not dead",
    "scripts": {
        "webpack": "webpack",
        "webpack-dev-server": "webpack-dev-server",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- -w",
        "prebuild": "npm run clean",
        "clean": "npx rimraf dist",
        "build": "npm run type-check && npm run webpack -- --env mode=production",
        "start": "npm-run-all --parallel type-check:watch dev",
        "dev": "npm run webpack-dev-server -- --env mode=development",
        "prettier": "npx prettier",
        "prettier:format": "npm run prettier -- --write src/**/*.ts",
        "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
        "lint-check": "npx eslint src/. --ext .ts -c ./.eslintrc.js",
        "code-style-check": "npm run lint-check && npm run prettier:check",
        "prepare": "husky install"
    },
    "author": "jkanchelov",
    "license": "MIT",
    "dependencies": {
        "core-js": "^3.34.0",
        "pixi-spine": "^4.0.4",
        "pixi.js": "^7.3.2"
    },
    "devDependencies": {
        "@babel/core": "7.23.6",
        "@babel/preset-env": "7.23.6",
        "@babel/runtime": "7.23.6",
        "babel-loader": "9.1.3",
        "@types/node": "^20.10.5",
        "@types/offscreencanvas": "^2019.7.3",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "browserslist": "^4.22.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "eslint-webpack-plugin": "^4.0.1",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^8.0.3",
        "identity-obj-proxy": "^3.0.0",
        "jsdom": "^23.0.1",
        "lint-staged": "^15.2.0",
        "mini-css-extract-plugin": "^2.7.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "terser-webpack-plugin": "^5.3.9",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.10.0"
    }
}

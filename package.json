{
    "name": "pixi-typescript-boilerplate",
    "version": "2.3.0",
    "description": "pixi.js typescript boilerplate",
    "scripts": {
        "test": "npx jest",
        "code-coverage": "jest --coverage",
        "type-check": "tsc --noEmit",
        "clean-build": "npx del-cli ./dist",
        "dev": "parcel ./src/index.html --port=8080 --open ",
        "build": "npm run type-check & npm run clean-build & parcel build ./src/index.html",
        "pretty-check": "npx prettier -c ./src/**/*.ts",
        "lint-check": "npx eslint ./src/**/*.ts",
        "code-style-check": "npm run lint-check && npm run pretty-check",
        "format": "npx prettier --write src/**"
    },
    "author": "jkanchelov",
    "license": "MIT",
    "dependencies": {
        "pixi.js": "^5.2.1"
    },
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "@types/jsdom": "^16.1.0",
        "@types/pixi.js": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.21.0",
        "del-cli": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.7.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.1.0",
        "jest-canvas-mock": "^2.2.0",
        "jsdom": "^16.1.0",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-static-files-copy": "^2.3.1",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.0",
        "typescript": "^3.8.3"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "jest-canvas-mock"
        ]
    }
}
